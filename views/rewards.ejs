<!-- RewardsPage Component -->
<!-- Purpose: Displays and manages loyalty program rewards -->
<% page = 'rewards' %>

<div class="space-y-6">
    <!-- Rewards Overview -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">Rewards Management</h2>
            <button class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add New Reward
            </button>
        </div>

        <!-- Rewards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Reward Card 1 -->
            <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl p-6 text-white transform hover:scale-105 transition-transform duration-200">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <h3 class="text-xl font-semibold">Free Coffee</h3>
                        <p class="text-sm opacity-80">100 points</p>
                    </div>
                    <div class="bg-white/20 p-2 rounded-lg">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-sm mb-4">Redeem for a free coffee at any participating location</p>
                <div class="flex justify-between items-center">
                    <span class="text-sm">Available: 50</span>
                    <button class="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg text-sm">Edit</button>
                </div>
            </div>

            <!-- Reward Card 2 -->
            <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl p-6 text-white transform hover:scale-105 transition-transform duration-200">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <h3 class="text-xl font-semibold">10% Discount</h3>
                        <p class="text-sm opacity-80">200 points</p>
                    </div>
                    <div class="bg-white/20 p-2 rounded-lg">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-sm mb-4">Get 10% off your next purchase</p>
                <div class="flex justify-between items-center">
                    <span class="text-sm">Available: Unlimited</span>
                    <button class="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg text-sm">Edit</button>
                </div>
            </div>

            <!-- Reward Card 3 -->
            <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl p-6 text-white transform hover:scale-105 transition-transform duration-200">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <h3 class="text-xl font-semibold">VIP Access</h3>
                        <p class="text-sm opacity-80">500 points</p>
                    </div>
                    <div class="bg-white/20 p-2 rounded-lg">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-sm mb-4">Exclusive access to VIP events and offers</p>
                <div class="flex justify-between items-center">
                    <span class="text-sm">Available: 20</span>
                    <button class="bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg text-sm">Edit</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Reward Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Reward Redemptions</h3>
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-gray-700 dark:text-gray-300">Total Redemptions</span>
                    <span class="font-semibold">245</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-gray-700 dark:text-gray-300">This Month</span>
                    <span class="font-semibold">45</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-gray-700 dark:text-gray-300">Most Popular</span>
                    <span class="font-semibold">Free Coffee</span>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Reward Categories</h3>
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-gray-700 dark:text-gray-300">Food & Beverage</span>
                    <span class="font-semibold">3 rewards</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-gray-700 dark:text-gray-300">Discounts</span>
                    <span class="font-semibold">2 rewards</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-gray-700 dark:text-gray-300">Special Access</span>
                    <span class="font-semibold">1 reward</span>
                </div>
            </div>
        </div>
    </div>
</div>