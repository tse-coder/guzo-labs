<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-50 dark:bg-gray-900">
    <div class="min-h-screen flex">
        <!-- Sidebar -->
        <aside class="w-64 bg-indigo-700 fixed inset-y-0 left-0 z-50 transition-transform duration-300 ease-in-out">
            <div class="p-6">
                <h1 class="text-2xl font-bold text-white">Admin Panel</h1>
            </div>
            <nav class="mt-6 px-3">
                <a href="/" class="flex items-center px-4 py-3 text-gray-100 hover:bg-indigo-600 rounded-lg mb-2 <%= page === 'dashboard' ? 'bg-indigo-800' : '' %>">
                    <i class="fas fa-home mr-3"></i>
                    Dashboard
                </a>
                <a href="/members" class="flex items-center px-4 py-3 text-gray-100 hover:bg-indigo-600 rounded-lg mb-2 <%= page === 'members' ? 'bg-indigo-800' : '' %>">
                    <i class="fas fa-users mr-3"></i>
                    Members
                </a>
                <a href="/rewards" class="flex items-center px-4 py-3 text-gray-100 hover:bg-indigo-600 rounded-lg mb-2 <%= page === 'rewards' ? 'bg-indigo-800' : '' %>">
                    <i class="fas fa-gift mr-3"></i>
                    Rewards
                </a>
                <a href="/data-visualizer" class="flex items-center px-4 py-3 text-gray-100 hover:bg-indigo-600 rounded-lg mb-2 <%= page === 'data-visualizer' ? 'bg-indigo-800' : '' %>">
                    <i class="fas fa-chart-bar mr-3"></i>
                    Analytics
                </a>
                <a href="/settings" class="flex items-center px-4 py-3 text-gray-100 hover:bg-indigo-600 rounded-lg mb-2 <%= page === 'settings' ? 'bg-indigo-800' : '' %>">
                    <i class="fas fa-cog mr-3"></i>
                    Settings
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 ml-64 p-8 overflow-x-hidden">
            <div class="max-w-7xl mx-auto">
                <%- body %>
            </div>
        </main>
    </div>

    <script>
        // Dark mode toggle
        const darkModeToggle = document.getElementById('darkModeToggle');
        if (darkModeToggle) {
            darkModeToggle.addEventListener('click', () => {
                document.documentElement.classList.toggle('dark');
            });
        }
    </script>
</body>
</html> 