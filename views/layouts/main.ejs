<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><% if (typeof title !== 'undefined') { %><%= title %><% } else { %>Loyalty Program Admin Dashboard<% } %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-white transition-colors duration-300" id="themeBody">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <%- include('../partials/sidebar') %>

        <!-- Main Content -->
        <main class="flex-1 p-6 overflow-y-auto">
            <%- body %>
        </main>
    </div>

    <script src="/js/scripts.js"></script>

    <% if (page === 'data-visualizer') { %>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <% } %>
</body>
</html>
