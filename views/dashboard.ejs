<!-- DashboardPage Component -->
<!-- Purpose: Main dashboard view displaying key metrics and summaries -->
<% page = 'dashboard' %>

<div class="space-y-8">
    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Active Users Card -->
        <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl shadow-lg p-6 transform transition-transform duration-200 hover:scale-105">
            <div class="flex justify-between items-start">
                <div>
                    <h3 class="text-lg font-semibold text-white/90 mb-2">Active Users</h3>
                    <p class="text-3xl font-bold text-white">3</p>
                    <p class="text-sm text-white/80 mt-2">+2 from last month</p>
                </div>
                <div class="bg-white/20 p-3 rounded-lg">
                    <i class="fas fa-users text-2xl text-white"></i>
                </div>
            </div>
        </div>

        <!-- Total Rewards Card -->
        <div class="bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl shadow-lg p-6 transform transition-transform duration-200 hover:scale-105">
            <div class="flex justify-between items-start">
                <div>
                    <h3 class="text-lg font-semibold text-white/90 mb-2">Total Rewards</h3>
                    <p class="text-3xl font-bold text-white">6</p>
                    <p class="text-sm text-white/80 mt-2">No changes this month</p>
                </div>
                <div class="bg-white/20 p-3 rounded-lg">
                    <i class="fas fa-gift text-2xl text-white"></i>
                </div>
            </div>
        </div>

        <!-- Points Issued Card -->
        <div class="bg-gradient-to-br from-violet-500 to-violet-600 rounded-xl shadow-lg p-6 transform transition-transform duration-200 hover:scale-105">
            <div class="flex justify-between items-start">
                <div>
                    <h3 class="text-lg font-semibold text-white/90 mb-2">Points Issued</h3>
                    <p class="text-3xl font-bold text-white">650</p>
                    <p class="text-sm text-white/80 mt-2">+150 points this week</p>
                </div>
                <div class="bg-white/20 p-3 rounded-lg">
                    <i class="fas fa-star text-2xl text-white"></i>
                </div>
            </div>
        </div>

        <!-- Engagement Rate Card -->
        <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl shadow-lg p-6 transform transition-transform duration-200 hover:scale-105">
            <div class="flex justify-between items-start">
                <div>
                    <h3 class="text-lg font-semibold text-white/90 mb-2">Engagement Rate</h3>
                    <p class="text-3xl font-bold text-white">85%</p>
                    <p class="text-sm text-white/80 mt-2">+5% from last month</p>
                </div>
                <div class="bg-white/20 p-3 rounded-lg">
                    <i class="fas fa-chart-line text-2xl text-white"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Member Growth Chart -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Member Growth</h3>
            <canvas id="memberGrowthChart" height="300"></canvas>
        </div>

        <!-- Points Distribution Chart -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Points Distribution</h3>
            <canvas id="pointsDistributionChart" height="300"></canvas>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-semibold text-gray-800 dark:text-white">Recent Activity</h2>
            <a href="#" class="text-indigo-600 hover:text-indigo-700 text-sm font-medium">View All</a>
        </div>
        <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                <div class="flex items-center">
                    <div class="bg-blue-100 dark:bg-blue-900/50 p-3 rounded-lg mr-4">
                        <i class="fas fa-user-plus text-blue-600 dark:text-blue-400"></i>
                    </div>
                    <div>
                        <p class="font-medium text-gray-800 dark:text-white">New Member Joined</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">John Doe registered as a new member</p>
                    </div>
                </div>
                <span class="text-sm text-gray-500 dark:text-gray-400">2 hours ago</span>
            </div>
            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                <div class="flex items-center">
                    <div class="bg-green-100 dark:bg-green-900/50 p-3 rounded-lg mr-4">
                        <i class="fas fa-gift text-green-600 dark:text-green-400"></i>
                    </div>
                    <div>
                        <p class="font-medium text-gray-800 dark:text-white">Reward Redeemed</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Sarah redeemed a Free Coffee reward</p>
                    </div>
                </div>
                <span class="text-sm text-gray-500 dark:text-gray-400">5 hours ago</span>
            </div>
        </div>
    </div>

    <!-- System Status -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-6">System Status</h2>
        <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                <div class="flex items-center">
                    <i class="fas fa-database text-gray-400 mr-3"></i>
                    <span class="text-gray-700 dark:text-gray-300">File Storage</span>
                </div>
                <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-400">Online</span>
            </div>
            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                <div class="flex items-center">
                    <i class="fas fa-server text-gray-400 mr-3"></i>
                    <span class="text-gray-700 dark:text-gray-300">API Service</span>
                </div>
                <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-400">Online</span>
            </div>
            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                <div class="flex items-center">
                    <i class="fas fa-envelope text-gray-400 mr-3"></i>
                    <span class="text-gray-700 dark:text-gray-300">Email Service</span>
                </div>
                <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-800 dark:bg-green-900/50 dark:text-green-400">Online</span>
            </div>
        </div>
    </div>
</div>

<script>
// Member Growth Chart
const memberGrowthCtx = document.getElementById('memberGrowthChart').getContext('2d');
new Chart(memberGrowthCtx, {
    type: 'line',
    data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
            label: 'Total Members',
            data: [1, 2, 2, 3, 3, 4],
            borderColor: '#6366f1',
            backgroundColor: 'rgba(99, 102, 241, 0.1)',
            tension: 0.4,
            fill: true
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                grid: {
                    display: true,
                    color: 'rgba(0, 0, 0, 0.1)'
                }
            },
            x: {
                grid: {
                    display: false
                }
            }
        }
    }
});

// Points Distribution Chart
const pointsCtx = document.getElementById('pointsDistributionChart').getContext('2d');
new Chart(pointsCtx, {
    type: 'bar',
    data: {
        labels: ['Standard', 'Premium', 'Lifetime'],
        datasets: [{
            label: 'Average Points',
            data: [1250, 850, 2150],
            backgroundColor: [
                'rgba(99, 102, 241, 0.8)',
                'rgba(16, 185, 129, 0.8)',
                'rgba(139, 92, 246, 0.8)'
            ],
            borderRadius: 6
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                grid: {
                    display: true,
                    color: 'rgba(0, 0, 0, 0.1)'
                }
            },
            x: {
                grid: {
                    display: false
                }
            }
        }
    }
});
</script>