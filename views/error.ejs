<%- body %>
<% page = 'error' %>

<div class="min-h-screen flex items-center justify-center">
    <div class="text-center">
        <h1 class="text-4xl font-bold text-red-600 mb-4">Oops! Something went wrong</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-6"><%= message %></p>
        <% if (process.env.NODE_ENV === 'development' && error) { %>
            <div class="bg-gray-100 dark:bg-gray-800 p-4 rounded-lg text-left">
                <pre class="text-sm text-gray-700 dark:text-gray-300"><%= JSON.stringify(error, null, 2) %></pre>
            </div>
        <% } %>
        <a href="/" class="mt-6 inline-block bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors">
            Return to Dashboard
        </a>
    </div>
</div> 